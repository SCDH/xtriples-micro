<xt:extensions xmlns:xt="http://www.oxygenxml.com/ns/extension"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.oxygenxml.com/ns/extension http://www.oxygenxml.com/ns/extension/extensions.xsd">
   <xt:extension xmlns:xt="http://www.oxygenxml.com/ns/extension" id="${framework.id}">
      <xt:location
         href="${release.url}${project.artifactId}-${project.version}-oxygen-framework.zip"/>
      <xt:version>${project.version}</xt:version>
      <xt:oxy_version>17.0+</xt:oxy_version>
      <xt:type>framework</xt:type>
      <xt:author>${author}</xt:author>
      <xt:name>XTriples</xt:name>
      <xt:description>
         <html xmlns="http://www.w3.org/1999/xhtml">
            <head>
               <title>XTriples</title>
            </head>
            <body>
               <div>
                  <p>This framework helps editing <a
                        href="https://xtriples.lod.academy/documentation.html">XTriples
                        configuration files</a> and provides helpers for extracting XTriples from
                     local XML documents and for running XTriples on a web services.</p>
                  <p>${project.description}</p>
                  <p>For more details see <a href="${project.url}">${project.url}</a>.</p>
               </div>
            </body>
         </html>
      </xt:description>
      <xt:license><![CDATA[
${license}
]]></xt:license>
   </xt:extension>
</xt:extensions>
